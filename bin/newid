#!/usr/bin/env node


var usage = require('../lib/usage');

if (process.argv.length < 4) {
	usage();
	process.exit(1);
}

var transformer = require('../lib/transformer'),
	opts = require('../lib/opts')(process.argv.slice(2));

if (opts) {
	require('../lib/newid')(opts.pattern, transformer(opts.template), opts.flags);
}
else {
	usage();
	process.exit(1);
}
