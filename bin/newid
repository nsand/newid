#!/usr/bin/env node


var usage = require('../lib/usage');

if (process.argv.length < 4) {
	usage();
	process.exit(1);
}

var opts = require('../lib/opts')(process.argv.slice(2));
var newid = require('../lib/newid');
if (opts) {
	newid(opts.pattern, newid.transformer(opts.template), opts.flags);
}
else {
	usage();
	process.exit(1);
}
